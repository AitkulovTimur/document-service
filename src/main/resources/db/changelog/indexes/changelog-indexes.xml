<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="2026-02-22-12:18:00" author="timur">

        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM pg_indexes
                WHERE indexname = 'idx_documents_status';
            </sqlCheck>
        </preConditions>

        <sqlFile path="06-create-indexes-documents.sql"
                 relativeToChangelogFile="true"/>
        <rollback>
            DROP INDEX IF EXISTS idx_documents_status;
            DROP INDEX IF EXISTS idx_documents_author;
            DROP INDEX IF EXISTS idx_documents_created_at;
        </rollback>
    </changeSet>

    <changeSet id="2026-02-22-12:20:00" author="timur">

        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM pg_indexes
                WHERE indexname = 'idx_history_document_created';
            </sqlCheck>
        </preConditions>

        <sqlFile path="07-create-indexes-document_history.sql"
                 relativeToChangelogFile="true"/>
        <rollback>
            DROP INDEX IF EXISTS idx_history_document_created;
        </rollback>
    </changeSet>

</databaseChangeLog>